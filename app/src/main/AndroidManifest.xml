<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="psi14.udc.es.thewardrobe"
    android:versionCode="1"
    android:versionName="0.1" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TheWardrobeMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MacClothActivity"
            android:label="@string/title_activity_mac_cloth"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListClothActivity"
            android:label="@string/title_activity_list_cloth"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CombinerActivity"
            android:label="@string/title_activity_combiner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DetailsClothActivity"
            android:label="@string/title_activity_details_cloth"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListCombinerActivity"
            android:label="@string/title_activity_list_combiner" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
